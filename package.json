{
  "name": "Intecmedia.Webpack",
  "version": "0.0.1",
  "description": "Intecmedia Webpack bootstrap",
  "scripts": {
    "dev": "cross-env NODE_ENV=development DEBUG=0 webpack -d --hide-modules --display-error-details",
    "debug": "cross-env NODE_ENV=development DEBUG=1 webpack -d --hide-modules --display-error-details",
    "watch-dev": "cross-env NODE_ENV=development DEBUG=0 webpack -w -d --hide-modules --display-error-details",
    "watch-dev-debug": "cross-env NODE_ENV=development DEBUG=1 webpack -w -d --hide-modules --display-error-details",
    "watch-prod": "cross-env NODE_ENV=production DEBUG=0 webpack -w -p --hide-modules --display-error-details --optimize-minimize",
    "watch-prod-debug": "cross-env NODE_ENV=production DEBUG=1 webpack -w -p --hide-modules --display-error-details --optimize-minimize",
    "prod": "cross-env NODE_ENV=production DEBUG=0 webpack -p --hide-modules --display-error-details --optimize-minimize",
    "prod-debug": "cross-env NODE_ENV=production DEBUG=1 webpack -p --hide-modules--display-error-details --optimize-minimize",
    "js-lint": "eslint --config .eslintrc.json --fix source/ --ext .js && eslint --config .eslintrc.json --fix webpack.config.js",
    "css-lint": "stylelint source/**/*.scss --fix --syntax scss --formater verbose --config .stylelintrc",
    "css-format": "stylefmt --recursive source/**/*.scss --config .stylelintrc",
    "lint": "npm run js-lint && npm run css-format && npm run css-lint",
    "imagemin": "imagemin build/img/* --out-dir build/img",
    "nocache": "rm -rf ./node_modules/.cache",
    "server": "cross-env NODE_ENV=development DEBUG=0 webpack-dev-server --hot --open",
    "server-debug": "cross-env NODE_ENV=development DEBUG=1 webpack-dev-server --hot --open",
    "build": "npm run nocache && npm run lint && npm run prod && npm run imagemin"
  },
  "author": "Dmitry Pyatkov",
  "license": "MIT",
  "browserslist": [
    "Android 2.3",
    "Android >= 4",
    "Chrome >= 35",
    "Firefox >= 38",
    "Explorer >= 10",
    "Edge >= 12",
    "iOS >= 8",
    "Opera >= 12",
    "Safari >= 8"
  ],
  "dependencies": {
    "autoprefixer": "latest",
    "babel-cli": "latest",
    "babel-core": "latest",
    "babel-eslint": "latest",
    "babel-loader": "latest",
    "babel-preset-env": "latest",
    "babel-preset-es2015": "latest",
    "bootstrap-sass": "latest",
    "browserslist": "latest",
    "clean-webpack-plugin": "latest",
    "cross-env": "latest",
    "css-hot-loader": "latest",
    "css-loader": "latest",
    "css-mqpacker": "latest",
    "eslint": "latest",
    "eslint-config-google": "latest",
    "eslint-loader": "latest",
    "extract-text-webpack-plugin": "latest",
    "file-loader": "latest",
    "font-awesome-sass": "latest",
    "html-loader": "latest",
    "html-webpack-plugin": "latest",
    "image-webpack-loader": "latest",
    "imagemin": "latest",
    "imagemin-cli": "latest",
    "imports-loader": "latest",
    "jquery": "~1",
    "json-loader": "latest",
    "modernizr": "latest",
    "modernizr-loader": "latest",
    "node-sass": "latest",
    "picturefill": "latest",
    "postcss": "latest",
    "postcss-cssnext": "latest",
    "postcss-loader": "latest",
    "sass-loader": "latest",
    "style-loader": "latest",
    "stylefmt": "latest",
    "stylelint": "latest",
    "stylelint-config-sass-guidelines": "latest",
    "stylelint-webpack-plugin": "latest",
    "url-loader": "latest",
    "webpack": "latest",
    "webpack-dev-server": "latest"
  },
  "devDependencies": {}
}
