{
    "plugins": [
        "stylelint-no-unsupported-browser-features",
        "stylelint-performance-animation",
        "stylelint-csstree-validator",
        "stylelint-no-nested-media"
    ],
    "rules": {
        "pitcher/no-nested-media": true,
        "csstree/validator": {
            "ignore": ["font-display"]
        },
        "unit-blacklist": ["em"],
        "no-duplicate-selectors": [true, {}],
        "declaration-block-no-duplicate-properties": [true, {
            "ignore": ["consecutive-duplicates-with-different-values"]
        }],
        "plugin/no-unsupported-browser-features": [true, {
            "ignore": [
                "calc",
                "css-featurequeries",
                "css-gradients",
                "flexbox",
                "font-unicode-range",
                "object-fit",
                "outline",
                "pointer-events",
                "rem",
                "transforms3d",
                "viewport-units",
                "will-change"
            ]
        }],
        "plugin/no-low-performance-animation": [true, {
            "ignore": [
                "background",
                "background-color",
                "background-position",
                "border-color",
                "border-top-color",
                "border-right-color",
                "border-bottom-color",
                "border-left-color",
                "box-shadow",
                "color",
                "fill",
                "height",
                "opacity",
                "stroke-dashoffset",
                "transform",
                "text-underline-color",
                "width"
            ]
        }]
    }
}