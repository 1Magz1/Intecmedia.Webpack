{
    "plugins": [
        "stylelint-a11y",
        "stylelint-no-unsupported-browser-features",
        "stylelint-performance-animation",
        "stylelint-csstree-validator",
        "./stylelint.no-nested-media.js"
    ],
    "rules": {
        "intecmedia/no-nested-media": true,
        "a11y/no-outline-none": true,
        "a11y/selector-pseudo-class-focus": true,
        "csstree/validator": {
            "ignore": ["font-display"]
        },
        "unit-blacklist": ["em"],
        "plugin/no-unsupported-browser-features": [true, {
            "ignore": [
                "calc",
                "css-featurequeries",
                "css-gradients",
                "css-sticky",
                "flexbox",
                "font-unicode-range",
                "multicolumn",
                "object-fit",
                "outline",
                "pointer-events",
                "rem",
                "transforms3d",
                "viewport-units",
                "will-change"
            ]
        }],
        "plugin/no-low-performance-animation": [true, {
            "ignore": [
                "background",
                "background-color",
                "background-position",
                "border-color",
                "border-top-color",
                "border-right-color",
                "border-bottom-color",
                "border-left-color",
                "box-shadow",
                "color",
                "fill",
                "height",
                "opacity",
                "stroke-dashoffset",
                "transform",
                "text-underline-color",
                "width"
            ]
        }]
    }
}