{
    "root": true,
    "parser": "babel-eslint",
    "extends": [
        "plugin:compat/recommended",
        "airbnb-base"
    ],
    "env": {
        "browser": true,
        "jquery": true
    },
    "plugins": [
        "import"
    ],
    "settings": {
        "polyfills": [
            "fetch",
            "IntersectionObserver",
            "Object.assign",
            "Promise",
            "ResizeObserver"
        ],
        "import/resolver": {
            "node": {},
            "webpack": {
                "config": "./resolve.config.js"
            }
        }
    },
    "rules": {
        "no-console": "off",
        "no-param-reassign": [2, {
            "props": false
        }],
        "unicode-bom": ["warn", "never"],
        "max-len": ["warn", 120, 4],
        "indent": ["warn", 4],
        "max-lines": ["warn", {
            "max": 300, 
            "skipBlankLines": true
        }],
        "import/order": "off",
        "sort-requires/sort-requires": "off",
        "linebreak-style": "off"
    }
}