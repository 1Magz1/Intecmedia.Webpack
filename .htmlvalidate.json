{
    "extends": [
        "htmlvalidate:recommended",
        "htmlvalidate:document"
    ],
    "rules": {
        "id-pattern": ["error", {
            "pattern": "kebabcase"
        }],
        "long-title": ["error", {
            "maxlength": 70
        }],
        "heading-level": "off",
        "no-inline-style": "off",
        "require-sri": "off",
        "svg-focusable": "off"
    }
}
