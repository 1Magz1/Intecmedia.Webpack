{
    "root": true,
    "parser": "babel-eslint",
    "extends": [
        "plugin:compat/recommended",
        "plugin:eslint-comments/recommended",
        "airbnb-base"
    ],
    "env": {
        "amd": true,
        "node": false,
        "browser": true,
        "jquery": true
    },
    "plugins": [
        "import"
    ],
    "settings": {
        "polyfills": [
            "fetch",
            "Array.from",
            "IntersectionObserver",
            "Object.assign",
            "Object.values",
            "Promise",
            "ResizeObserver",
            "Symbol"
        ],
        "import/resolver": {
            "node": {},
            "webpack": {
                "config": "./resolve.config.js"
            }
        }
    },
    "rules": {
        "func-names": ["error"],
        "no-console": "off",
        "no-param-reassign": ["error", {
            "props": false
        }],
        "no-unused-expressions": "off",
        "unicode-bom": ["error", "never"],
        "max-len": ["error", 120, {
            "ignoreComments": true,
            "ignoreTrailingComments": true,
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true,
            "ignoreRegExpLiterals": true
        }],
        "indent": ["error", 4],
        "max-lines": ["error", {
            "max": 300, 
            "skipBlankLines": true,
            "skipComments": true
        }],
        "import/order": "off",
        "sort-requires/sort-requires": "off",
        "linebreak-style": ["error", "unix"],
        "eslint-comments/require-description": ["error", {
            "ignore": []
        }]
    }
}