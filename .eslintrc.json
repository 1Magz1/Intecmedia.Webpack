{
    "root": true,
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "browser": true,
        "jquery": true
    },
    "rules": {
        "no-console": 0,
        "unicode-bom": ["error", "never"],
        "max-len": [2, {
            "code": 120,
            "tabWidth": 4,
            "ignoreUrls": true
        }],
        "indent": ["error", 4, {
            "SwitchCase": 1
        }]
    }
}